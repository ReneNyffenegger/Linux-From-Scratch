lfs_trap_err


pushd $LFS/sources/untarred/util-linux-*

./configure --prefix=/tools                \
            --without-python               \
            --disable-makeinstall-chown    \
            --without-systemdsystemunitdir \
            --without-ncurses              \
            PKG_CONFIG=""

make
make install

popd

exit 0
