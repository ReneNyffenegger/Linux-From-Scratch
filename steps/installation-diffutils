# vi: ft=sh
#
#  http://www.linuxfromscratch.org/lfs/view/stable/chapter06/diffutils.html
#

lfs_trap_err

# cd /sources/untarred/diffutils-*

lfs_untar_and_cd diffutils
# lfs_cd_untarred

./configure --prefix=/usr

make           &> /usr/lfs/logs/diffutils.make

# TODO temporarily untrapped
trap - ERR
make check     &> /usr/lfs/logs/diffutils.make-check
lfs_trap_err

make install   &> /usr/lfs/logs/diffutils.make-install
