lfs_start_step

lfs_untar_and_cd diffutils

./configure --prefix=/usr

make           &> /usr/lfs/logs/diffutils.make

# TODO
# make check     &> /usr/lfs/logs/diffutils.make-check

make install   &> /usr/lfs/logs/diffutils.make-install

lfs_end_step
