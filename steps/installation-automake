lfs_trap_err

# cd /sources/untarred/automake-*
lfs_cd_untarred automake

./configure --prefix=/usr --docdir=/usr/share/doc/automake-1.15.1 &> /lfs/logs/automake.configure

make &> /lfs/logs/automake.make

sed -i "s:./configure:LEXLIB=/usr/lib/libfl.a &:" t/lex-{clean,depend}-cxx.sh
#
# TODO: skipped for now
#
# make -j4 check  &> /lfs/logs/automake.make-check
#
# Output of check would be in test-suite.log

make install &> /lfs/logs/automake.make-install
