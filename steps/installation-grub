lfs_trap_err

# lfs_untar_and_cd
lfs_cd_untarred grub

./configure --prefix=/usr          \
            --sbindir=/sbin        \
            --sysconfdir=/etc      \
            --disable-efiemu       \
            --disable-werror

make

make install
