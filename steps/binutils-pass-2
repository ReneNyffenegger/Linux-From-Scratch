# vim: ft=sh
#
# http://www.linuxfromscratch.org/lfs/view/stable/chapter05/binutils-pass2.html
#

lfs_trap_err

#  TODO: as soon as everything compiles, this untar hack should not be necessary anymore
# pushd $LFS/sources/untarred/binutils-*
pushd $LFS/sources/untarred
lfs_log "Trying to remove binutils-*, PWD=$PWD"

rm -rf binutils-*
cd ..

lfs_log "Trying to tar xf binutils-*, PWD=$PWD"
tar xf binutils-* -C untarred


cd untarred/binutils-*

mkdir -v build
cd       build

lfs_log "calling ../configure, PWD=$PWD"

CC=$LFS_TGT-gcc                \
AR=$LFS_TGT-ar                 \
RANLIB=$LFS_TGT-ranlib         \
../configure                   \
    --prefix=/tools            \
    --disable-nls              \
    --disable-werror           \
    --with-lib-path=/tools/lib \
    --with-sysroot

make
make install

make -C ld clean
make -C ld LIB_PATH=/usr/lib:/lib
cp -v ld/ld-new /tools/bin

popd

exit 0
