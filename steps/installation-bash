lfs_trap_err

#
# TODO
#
mkdir -p /logs

# cd /sources/untarred/bash-*
lfs_untar_and_cd bash

patch -Np1 -i ../../bash-4.4-upstream_fixes-1.patch

type_bash=$(type bash)

lfs_log "TQ84 type bash before: $type_bash"

./configure --prefix=/usr                       \
            --docdir=/usr/share/doc/bash-4.4    \
            --without-bash-malloc               \
            --with-installed-readline  &> /logs/bash.configure

make &> /logs/bash.make

chown -Rv nobody . &> /logs/bash.chown

# TODO: This /bin/bash does apparently not exist here
lfs_log "TQ84 does /bin/bash exist here? Apparently, it should point to /tools/bin/bash. ls -l /bin/bash: $(ls -l /bin/bash)"

su nobody -s /bin/bash -c "PATH=$PATH make tests"  > /logs/bash.make.tests

make install


mv -vf /usr/bin/bash /bin

lfs_log "TQ84 type bash after: $type_bash"

