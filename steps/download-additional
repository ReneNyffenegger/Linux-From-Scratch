lfs_trap_err

exit 0

todo 

# sudo wget ftp://roy.marples.name/pub/dhcpcd/dhcpcd-6.11.5.tar.xz -P $LFS/sources
sudo wget   http://roy.marples.name/downloads/dhcpcd/dhcpcd-6.11.5.tar.xz                    -P $LFS/sources

sudo wget  https://github.com//libusb/libusb/releases/download/v1.0.21/libusb-1.0.21.tar.bz2 -P $LFS/sources

# PCI and USB utils
sudo mkdir                                                                                      $LFS/usr/share/hwdata
sudo wget  https://www.kernel.org/pub/linux/utils/usb/usbutils/usbutils-009.tar.xz           -P $LFS/sources
sudo wget  https://www.kernel.org/pub/software/utils/pciutils/pciutils-3.5.5.tar.xz          -P $LFS/sources
sudo wget  https://pci-ids.ucw.cz/v2.2/pci.ids                                               -O $LFS/usr/share/hwdata/pci.ids
sudo wget   http://www.linux-usb.org/usb.ids                                                 -O $LFS/usr/share/hwdata/usb.ids

# OpenSSL
sudo wget  https://openssl.org/source/openssl-1.1.0f.tar.gz                                  -P $LFS/sources

# libnl
sudo wget  https://github.com/thom311/libnl/releases/download/libnl3_3_0/libnl-3.3.0.tar.gz  -P $LFS/sources

# wpa_supplicant
sudo wget  https://w1.fi/releases/wpa_supplicant-2.6.tar.gz                                  -P $LFS/sources

# wget
sudo wget  https://ftp.gnu.org/gnu/wget/wget-1.19.1.tar.xz                                   -P $LFS/sources

#
# http://www.linuxfromscratch.org/blfs/view/stable/introduction/bootscripts.html
#    wget http://anduin.linuxfromscratch.org/BLFS/blfs-bootscripts/blfs-bootscripts-20170731.tar.xz
# 
# However, the bootscripts are already located under
#   blfs/bootscripts
# So, they can be copied
#
sudo cp -r blfs/bootscripts/ $LFS/lfs/bootscripts


