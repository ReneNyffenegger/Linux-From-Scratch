#
# vi: ft=sh
#
#  http://www.linuxfromscratch.org/lfs/view/stable/chapter06/inetutils.html
#

lfs_trap_err

lfs_cd_untarred inetutils
# cd /sources/untarred/inetutils-*


./configure --prefix=/usr        \
            --localstatedir=/var \
            --disable-logger     \
            --disable-whois      \
            --disable-rcp        \
            --disable-rexec      \
            --disable-rlogin     \
            --disable-rsh        \
            --disable-servers       &> /lfs/logs/inetutils.configue

make   &> /lfs/logs/inetutils.make

# TODO: temporarily untrapping errors
trap - ERR
make check  &> /lfs/logs/inetutils.make-check
lfs_trap_err

make install &> /lfs/logs/install.make-install

mv -v /usr/bin/{hostname,ping,ping6,traceroute} /bin
mv -v /usr/bin/ifconfig /sbin
