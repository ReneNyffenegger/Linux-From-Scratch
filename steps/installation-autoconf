lfs_trap_err

# cd /sources/untarred/autoconf-*
lfs_cd_untarred autoconf

./configure --prefix=/usr &> /lfs/logs/autoconf.configure

lfs_log "make make"
make                      &> /lfs/logs/autoconf.make

