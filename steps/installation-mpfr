lfs_trap_err

cd /sources/untarred/mpfr-*

./configure --prefix=/usr        \
            --disable-static     \
            --enable-thread-safe \
            --docdir=/usr/share/doc/mpfr-3.1.5

make
# make html

make check

make install
# make install-html
