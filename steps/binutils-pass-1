# vim: ft=sh
#
# http://www.linuxfromscratch.org/lfs/view/stable/chapter05/binutils-pass1.html
#

lfs_trap_err

#  TODO: as soon as everything compiles, this untar hack should not be necessary anymore
# pushd $LFS/sources/untarred/binutils-*
pushd $LFS/sources/untarred
lfs_log "Trying to remove binutils-*, PWD=$PWD"

rm -rf binutils-*
cd ..

lfs_log "Trying to tar xf binutils-* in $PWD"
tar xf binutils-* -C untarred

cd untarred/binutils-*

mkdir -v build
cd       build

lfs_log "calling configure, PWD=$PWD, LFS=$LFS, LFS_TGT=$LFS_TGT"

../configure --prefix=/tools            \
             --with-sysroot=$LFS        \
             --with-lib-path=/tools/lib \
             --target=$LFS_TGT          \
             --disable-nls              \
             --disable-werror


make

case $(uname -m) in
  x86_64) mkdir -v /tools/lib && ln -sv lib /tools/lib64 ;;
esac

lfs_log "ls -ld /tools/lib:   $(ls -ld /tools/lib)"
lfs_log "ls -ld /tools/lib64: $(ls -ld /tools/lib64)"

lfs_log "before make install: which $LFS_TGT-ld: $(which $LFS_TGT-ld)"
make install
lfs_log "after  make install: which $LFS_TGT-ld: $(which $LFS_TGT-ld)"

lfs_log "readelf ... $(readelf -l            $LFS_TGT-ld | grep interpreter)"
lfs_log "readelf ... $(readelf -l /tools/bin/$LFS_TGT-ld | grep interpreter)"

# TODO
#  Check if /tools/lib or /tools/bin was populated with make install

popd
