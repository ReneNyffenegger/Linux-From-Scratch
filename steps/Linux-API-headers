lfs_trap_err

pushd $LFS/sources/untarred/linux-*

make mrproper

make INSTALL_HDR_PATH=dest headers_install

#
# TODO, Apparently, the /tools/include directory must
# be manually created
#
mkdir /tools/include

cp -rv dest/include/* /tools/include

popd

# if [[ -d /tools/include ]]; then
#    lfs_log "/tools/include does not exist"
#    return 1
# fi

exit 0
