lfs_start_step

lfs_download_extract_and_pushd ftp://ftp.gnome.org/pub/gnome/sources/gobject-introspection/1.52/gobject-introspection-1.52.1.tar.xz

./configure --prefix=/usr --disable-static
make
make install

lfs_end_step
