# vi: ft=sh
#
# http://linuxfromscratch.org/blfs/view/stable/multimedia/libvpx.html
#

lfs_start_step

lfs_download_extract_and_pushd

sed -i 's/cp -p/cp/' build/make/Makefile

mkdir libvpx-build
cd    libvpx-build

../configure --prefix=/usr    \
             --enable-shared  \
             --disable-static

make

make install
lfs_end_step

