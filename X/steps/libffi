# vi: ft=sh
#
# TODO
#

lfs_start_step

lfs_download_extract_and_pushd http://www.linuxfromscratch.org/blfs/view/stable/general/libffi.html

sed -e '/^includesdir/ s/$(libdir).*$/$(includedir)/' \
    -i include/Makefile.in &&

sed -e '/^includedir/ s/=.*$/=@includedir@/' \
    -e 's/^Cflags: -I${includedir}/Cflags:/' \
    -i libffi.pc.in        &&

./configure --prefix=/usr --disable-static
make

make install

lfs_end_step
