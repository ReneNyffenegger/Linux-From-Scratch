# vi: ft=sh
#
# http://www.linuxfromscratch.org/blfs/view/8.1/general/apr-util.html
#

lfs_start_step

lfs_download_extract_and_pushd ftp://ftp.mirrorservice.org/sites/ftp.apache.org/apr/apr-util-1.6.0.tar.bz2

./configure --prefix=/usr       \
            --with-apr=/usr     \
            --with-gdbm=/usr    \
            --with-openssl=/usr \
            --with-crypto
make

make install


lfs_end_step
