# vi: ft=sh
#
# http://www.linuxfromscratch.org/blfs/view/8.1/general/clucene.html
#

lfs_start_step

lfs_downlad                    http://www.linuxfromscratch.org/patches/blfs/8.1/clucene-2.3.3.4-contribs_lib-1.patch
lfs_download_extract_and_pushd https://downloads.sourceforge.net/clucene/clucene-core-2.3.3.4.tar.gz

patch -Np1 -i $lfs_downlad_dir/clucene-2.3.3.4-contribs_lib-1.patch

mkdir build
cd    build

cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DBUILD_CONTRIBS_LIB=ON ..
make
make install

lfs_end_step
