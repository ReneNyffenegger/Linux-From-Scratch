# vim: ft=sh

. ./lfs-env

if [[ ! -d $lfs_root ]]; then
  lfs_log "lfs_root ($lfs_root) does not exist, creating"
  mkdir $lfs_root
  mkdir $lfs_root/done
  mkdir $lfs_root/steps
fi

cp lfs-functions    $lfs_root
cp 40.in-chroot-env $lfs_root
cp steps/*          $lfs_root/steps
chmod -R 777        $lfs_root
