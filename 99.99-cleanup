# vi: ft=sh
#
. ./lfs-env

for mount in $(mount | awk '{ print $3 }' | grep $LFS/); do
#
#   TODO: should $LFS/dev be unmounted first
#
    echo unmounting $mount
    sudo umount $mount
done

sudo rm /tools

if [[ -z $LFS ]]; then
   echo "\$LFS is not set"
else
  echo "removing $LFS/tools"
  sudo rm -rf $LFS/tools
fi

sudo userdel  lfs
# sudo groupdel lfs

sudo rm -rf /home/lfs

echo TODO: should /bin/sh be pointed back to dash on Ubuntu?

sudo umount $LFS
